# Server (use production for SaaS deploy)
NODE_ENV=development
PORT=5000

# Database (required)
MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT (required in production; min 32 chars each; must be different)
JWT_SECRET=your_jwt_secret_min_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_min_32_characters_long
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=7d

# Frontend (required in production for CORS)
FRONTEND_URL=http://localhost:3000
USE_COOKIE=false

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@yourschool.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional
REQUIRE_EMAIL_VERIFICATION=false
SEND_ABSENT_SMS=false
SEND_PAYMENT_RECEIPT=false
FIREBASE_SERVICE_ACCOUNT=
