			"item": [
				{ "name": "Register", "request": { "method": "POST", "header": [{"key": "Content-Type","value": "application/json"}], "body": { "mode": "raw", "raw": "{\n  \"name\": \"John Doe\", \"email\": \"john@school.com\", \"password\": \"SecurePass123!\", \"role\": \"teacher\", \"schoolCode\": \"SCH001\"\n}" }, "url": "{{baseUrl}}/api/auth/register", "description": "Register new user" }, "auth": { "type": "noauth" } },
