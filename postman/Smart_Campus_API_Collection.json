				{ "name": "Refresh Token", "request": { "method": "POST", "header": [], "body": { "mode": "raw", "raw": "{\n  \"refreshToken\": \"<refresh_token>\"\n}" }, "url": "{{baseUrl}}/api/auth/refresh-token" }, "auth": { "type": "noauth" } },
				{ "name": "Profile", "request": { "method": "GET", "url": "{{baseUrl}}/api/auth/profile", "description": "Get current user profile" } },
